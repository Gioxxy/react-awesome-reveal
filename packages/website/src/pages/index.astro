<style>
  .wrapper {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .content {
    padding: 4rem 0;
  }

  .title {
    text-align: center;
  }

  .headline {
    text-align: center;
  }

  @media (min-width: 800px) {
    .content {
      padding: 8rem 0;
    }
  }
</style>
